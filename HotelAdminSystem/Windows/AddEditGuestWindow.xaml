<Window x:Class="HotelAdminSystem.AddEditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAdminSystem"
        mc:Ignorable="d"
        Title="Добавление/редактирование гостя" MinHeight="600" Width="800">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel CanVerticallyScroll="True">
                <GroupBox Header="Личная информация">
                    <StackPanel Margin="5">
                        <TextBlock Text="Имя:" FontSize="18"/>
                        <TextBox x:Name="FirstNameTextBox" Margin="0,5" TextChanged="ValidateForm" FontSize="18"/>

                        <TextBlock Text="Фамилия:" Margin="0,10,0,0" FontSize="18"/>
                        <TextBox x:Name="LastNameTextBox" Margin="0,5" TextChanged="ValidateForm" FontSize="18"/>

                        <TextBlock Text="Отчество:" Margin="0,10,0,0" FontSize="18"/>
                        <TextBox x:Name="MiddleNameTextBox" Margin="0,5" TextChanged="ValidateForm" FontSize="18"/>

                        <TextBlock Text="Телефон:" Margin="0,10,0,0" FontSize="18"/>
                        <TextBox x:Name="PhoneTextBox" Margin="0,5" TextChanged="ValidateForm" FontSize="18"/>

                        <TextBlock Text="Email:" Margin="0,10,0,0" FontSize="18"/>
                        <TextBox x:Name="EmailTextBox" Margin="0,5" FontSize="18"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Документы" Margin="0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Номер паспорта:" FontSize="18"/>
                        <TextBox x:Name="PassportTextBox" Margin="0,5" TextChanged="ValidateForm" FontSize="18"/>

                        <TextBlock Text="Дата рождения:" Margin="0,10,0,0" FontSize="18"/>
                        <DatePicker x:Name="BirthDatePicker" Margin="0,5" SelectedDateChanged="ValidateForm" FontSize="18"/>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                    <Button Content="Сохранить" Click="SaveButton_Click" Width="110" Margin="0,0,10,0"
                x:Name="SaveButton" IsEnabled="False"/>
                    <Button Content="Отмена" Click="CancelButton_Click" Width="110"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
